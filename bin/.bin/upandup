#!/usr/bin/env bash

# Update Homebrew if it's there.
if type brew &>/dev/null; then
  brew update
  brew upgrade
  brew upgrade --cask
fi

# asdf updates
asdf update
asdf plugin update --all
asdf install

# neovim
if type nvim &>/dev/null; then
  echo 'Updating neovim packages'
  nvim --headless -c 'autocmd User PackerComplete quitall' -c 'PackerSync'
fi

# doom
doom upgrade
