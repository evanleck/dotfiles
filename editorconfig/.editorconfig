# http://EditorConfig.org
# This is the top most config file.
root = true

# All files
[*]

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Character set
charset = utf-8

# Trim extra whitespace.
trim_trailing_whitespace = true

# Tabs sized 2 spaces.
indent_style = tab
indent_size = 2

[*.{yml,yaml}]
indent_style = space
