[user]
	name = Evan Lecklider
	email = evan@lecklider.com

[core]
	autocrlf = false
	editor = nvim
	excludesfile = ~/.config/git/ignore
	pager = delta
	quotepath = false

[alias]
	b = branch
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	c = commit
	co = checkout
	d = diff
	ds = diff --staged
	ls = log --pretty=oneline --abbrev-commit --graph --decorate
	recent = log -10 --graph --pretty=oneline --abbrev-commit --date=relative
	s = status -sb
	today = log --since='1 day ago' --graph --pretty=oneline --abbrev-commit --date=relative
	twoweeks = log --since='14 days ago' --graph --pretty=oneline --abbrev-commit --date=relative
	wc = whatchanged -p
	week = log --since='7 days ago' --graph --pretty=oneline --abbrev-commit --date=relative

[interactive]
	diffFilter = delta --color-only

[add.interactive]
	useBuiltin = false

[delta]
	syntax-theme = Catppuccin-mocha

[mergetool]
	keepBackup = true
	prompt = false

[status]
	showUntrackedFiles = all

[push]
	default = simple
	followTags = true

[pull]
	ff = only

[merge]
	conflictstyle = diff3

[filter "media"]
	clean = git media clean %f
	required = true
	smudge = git media smudge %f

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f

[init]
	defaultBranch = main
